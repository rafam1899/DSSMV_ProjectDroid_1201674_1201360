<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity"
        android:padding="20dp"
        android:gravity="center"
        android:background="#1F1B3E">
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WELCOME TO"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="#fff"
            />
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ASTEROID FINDER"
            android:gravity="center"
            android:textSize="30dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="sans-serif-black"
            android:textColor="#fff"/>
    <Button
            android:id="@+id/btn_pin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login with pin"
            android:backgroundTint="#098"
            android:textColor="#fff"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="or"
            android:textColor="#fff">
    </TextView>
    <Button
            android:id="@+id/btn_bio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login with biometrics"
            android:textColor="#fff"
            android:backgroundTint="#098"/>
    <TextView
            android:id="@+id/textNew"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:text="Insert Pin and remember for next time"
            android:gravity="center"
            android:textColor="#fff"/>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <NumberPicker
                android:id="@+id/n1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:theme="@style/NumberPickerTheme"/>
        <NumberPicker
                android:id="@+id/n2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:theme="@style/NumberPickerTheme"/>
        <NumberPicker
                android:id="@+id/n3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:theme="@style/NumberPickerTheme"/>
        <NumberPicker
                android:id="@+id/n4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:theme="@style/NumberPickerTheme"/>
    </LinearLayout>
    <Button
            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:visibility="invisible"
            android:textColor="#fff"
            android:backgroundTint="#098"/>

</LinearLayout>