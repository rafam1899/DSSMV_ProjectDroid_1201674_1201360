<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity"
        android:padding="20dp"
        android:gravity="center"
        android:background="#1F1B3E">
    <ImageView
            android:layout_gravity="center_horizontal"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/asteroid"/>
    <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WELCOME TO"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="#fff"
            />
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ASTEROID FINDER"
            android:gravity="center"
            android:textSize="30dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="sans-serif-black"
            android:textColor="#fff"/>
    <Button
            android:id="@+id/btn_pin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login with pin"
            android:backgroundTint="#098"
            android:textColor="#fff"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="or"
            android:textColor="#fff">
    </TextView>
    <ImageButton
            android:id="@+id/btn_bio"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textColor="#fff"
            android:background="@drawable/fingerprint1"/>
    <TextView
            android:id="@+id/textNew"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:text="Insert Pin and remember for next time"
            android:gravity="center"
            android:textColor="#fff"/>
    <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:letterSpacing="0.2"
            android:gravity="center"
            android:maxLength="4"
            android:id="@+id/pin"
            android:textColor="#fff"
            android:backgroundTint="#fff"/>
    <Button
            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:visibility="invisible"
            android:textColor="#fff"
            android:backgroundTint="#098"/>

</LinearLayout>