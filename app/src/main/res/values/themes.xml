<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DSSMV" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#1F1B3E</item>
        <item name="colorPrimaryVariant">#1F1B3E</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#1F1B3E</item>
        <item name="colorSecondaryVariant">#1F1B3E</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="NumberPickerTheme" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@android:color/white</item>

        <!-- Edit this colorControlNormal value as you need -->
        <item name="colorControlNormal">@android:color/white</item>

        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">15sp</item>
    </style>
</resources>